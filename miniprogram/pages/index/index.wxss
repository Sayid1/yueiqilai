.wrap {
  padding: 20rpx 30rpx;
}
swiper image {
   border-radius: 7px;
   width:100%;
   height:100%;
}

.item:first-of-type {
  margin-top: 60rpx;
}
.item {
  border-radius: 7px;
  height: 200rpx;
  border: 1px solid #ccc;
  margin-bottom: 40rpx;
  font-size: 28rpx;
  line-height: 45rpx;
  box-shadow: 5px 4px #f2f2f2;
  display: flex;
  flex-direction: column;
  padding: 15rpx;
}
.item .content {
  flex: 1;
  display: flex;
  align-items: center;
}
.item .supplement {
  text-align: right;
}

.avatar {
  /* width: 150rpx; */
  height: 100%;
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  justify-content: center;
  position: relative;
  /* border: 1px solid #ccc; */
}

.avatar i {
  position: absolute;
  top: 80rpx;
  right: 0;
  transform: translateY(-100%);
}


.item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.add {
  position: fixed;
  right: 20rpx;
  bottom: 100rpx;
  background: greenyellow;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.add::before {
  content: ' ';
  position: absolute;
  top: 50%;
  height: 2rpx;
  width: 100%;
  background: #fff;
  transform: translateY(-50%);
}
.add::after {
  content: ' ';
  position: absolute;
  left: 50%;
  top: 0;
  height: 100%;
  width: 2px;
  background: #fff;
  transform: translateX(-50%)
}
