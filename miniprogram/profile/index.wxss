.avatar-wrap {
  position: relative;
  height: 400rpx;
}
.avatar-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.userinfo {  
  position: relative;  
  height: 100%;
  color: #000;  
  display: flex;  
  flex-direction: column;  
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}

.new {
  font-size: 24rpx;
  color: red;
}